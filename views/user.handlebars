{{log 'testing' posts}}
{{#with user}}
<body id="userBody">
  <header id="navBar">
    <nav>
      <h2 id="welcome">Welcome, <span>{{firstName}}</span></h2>
            <button class="navBtn">My Posts</button>
            <button class="navBtn">My Wishlist</button>
            <button class="navBtn logout">Log-Out</button>
        </nav>
    </header>

    <section>
        <div id="post">
            <input type="text" id="post-title"/>
            <input type="text" placeholder="Share your experience..." id="post-desc"/>
            <button id="postBtn">Post</button>
        </div>
    </section>
{{/with}}
    <div id="post-section">
        {{#each posts as |post|}}
        {{log 'this is a' post}}
        <h3>{{post.title}}</h3>
        <p>{{post.text}}</p>
        {{/each}}
    </div>

</body>

<script src="/assets/profile.js"></script>

{{#if logged_in}}
  <script src="/assets/logout.js"></script>
  {{/if}}
